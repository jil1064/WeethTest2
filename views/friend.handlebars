<body>
  <div id="navBar" class="bar">
    <p style="margin-top: 1.25vh; font-size: 4.5vh;">{{name}}</p>
    <img id="back" onclick="goBack()" src="../img/back.png">
    <!--        <a href="/home">
      <img id="homeButton" src="../img/homeButton.png" text-align="center" />
    </a>-->
  </div>

  <div id="botBar" class="bar fixed-nav-bar">
    {{#if viewB}}
    <img id="home" onclick="window.location.href='/home'" src="../img/home.png" style="filter: grayscale(100%);">
    <img id="noti" onclick="window.location.href='/notification'" src="../img/noti.png" style="filter: grayscale(100%);">
    <img id="friends" onclick="window.location.href='/friendsB'" src="../img/friends.png" style="filter: grayscale(100%);">
    <img class="createBtn" id="createEveB" onclick="window.location.href='/createB'" src="../img/createEventButton.png">
    {{else}}
    <img id="home" onclick="window.location.href='/home'" src="../img/home.png" style="filter: grayscale(100%);">
    <img id="noti" onclick="window.location.href='/notification'" src="../img/noti.png" style="filter: grayscale(100%);">
    <img id="friends" onclick="window.location.href='/friends'" src="../img/friends.png" style="filter: grayscale(100%);">
    <img class="createBtn" id="createEveA" onclick="window.location.href='/create'" src="../img/createA.png" style="filter: grayscale(100%);">
    {{/if}}
  </div>

  {{#if activities}}
  <br>
  <div id="timeline">
    {{#if viewB}}
    {{#each activities}}
    <div class="event" onclick="window.location.href='/letterB/{{id}}'">
      <div class="month">{{month}}</div>
      <div class="eventDot"></div>
      <div class="eventDate">{{date}}</div>
      <div class="eventCard">{{title}} at {{location}}</div>
    </div>
    {{/each}}
    {{else}}
    {{#each activities}}
    <div class="event" onclick="window.location.href='/letter/{{id}}'">
      <div class="month">{{month}}</div>
      <div class="eventDot"></div>
      <div class="eventDate">{{date}}</div>
      <div class="eventCard">{{title}} at {{location}}</div>
    </div>
    {{/each}}
    {{/if}}
  </div>
  {{else}}
  <div>
    <h2 style="margin-top: 200px">You and {{name}} have no activities together yet...</h2>
  </div>
  {{/if}}

</body>
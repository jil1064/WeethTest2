<!doctype>

<html>

<head>
    <title>Weeth</title>
    <link rel="icon" href="">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="../css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <script src="../js/facebookHome.js"></script>
    <script src="../js/jquery.min.js"></script>
    <script src="../js/script.js"></script>
</head>

<body>

    <div id="navBar" class="bar">
        <p style="margin-top: 1.75vh; font-size: 4.5vh;">Weeth</p>
        <img id="profileHome" onclick="window.location.href='/profile'" src="../img/profile.png">
    </div>

    <div id="botBar" class="bar fixed-nav-bar">
        <img id="createEve" onclick="window.location.href='create'" src="../img/createEventButton.png">
        <img id="noti" onclick="window.location.href='/notification'" src="../img/noti.png">
        <img id="friends" onclick="window.location.href='/friends'" src="../img/friends.png">
    </div>

    <div id="timeline" style="margin-bottom: 20vh;">
        {{#each events}}
        <div class="event" onclick="window.location.href='/letter/{{id}}'">
            <div class="month">{{month}}</div>
            <div class="eventDot"></div>
            <div class="eventDate">{{date}}</div>
            <div class="eventCard">{{title}} at {{location}}<br>weeth {{weeth}}</div>
        </div>
        {{/each}}
    </div>

</body>

</html>


<script>

    $(document).ready(function () {
        initializePage();

        var temp = "";
        $('.month').each(function (i, obj) {
            if ($(this).html() == temp) {
                $(this).css("opacity", "0");
            }
            temp = $(this).html();
        });

    });


</script>

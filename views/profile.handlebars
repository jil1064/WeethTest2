<!doctype>
<html>

<head>
  <title>Weeth</title>
  <link rel="icon" href="">
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="../css/style.css">
  <script src="../js/jquery.min.js"></script>
  <script src="../js/script.js"></script>
  <script src="../js/facebookProfile.js"></script>
  <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
  <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v6.0"></script>

  <div id="navBar" class="bar">
    <p style="margin-top: 1.75vh; font-size: 4.5vh;">Profile</p>
    <img id="back" onclick="goBack()" src="img/back.png">
  </div>
  <br><br><br><br>

  <img id="userPhoto" src="{{user.userPhoto}}" draggable="false">
  <p id="profileName">{{user.name}}</p>
  <br>

  <form>
    <div display="block" class="input-icons">
      <label for="username" class="profileFill">Username</label><br>
      <i class="fa fa-user icon"></i>
      <i class="fa fa-pencil icon editIcon"></i>
      <input id="profileNameTwo" class="profileText" onClick="this.select();" type="text" value="{{user.name}}"></input>
    </div>

    <div display="block" class="input-icons">
      <label for="email" class="profileFill">Email</label><br>
      <i class="fa fa-envelope icon"></i>
      <i class="fa fa-pencil icon editIcon"></i>
      <input id="profileEmail" class="profileText" onClick="this.select();" type="text" value="{{user.email}}"></input>
    </div>

    <div display="block" class="input-icons">
      <label for="password" class="profileFill">Password</label><br>
      <i class="fa fa-key icon"> </i>
      <i class="fa fa-pencil icon editIcon"></i>
      <input id="profilePassword" class="profileText" onClick="this.select();" type="password" value="{{user.password}}"></input>
    </div>
  </form>

  <button id="saveChanges">Save Changes</button>
  <br><br>

  <button id="signOut" onclick="window.location.href='/';">SIGN OUT</button>
  <br><br><br>

</body>

</html>
